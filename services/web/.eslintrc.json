{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "prettier",
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "quotes": [2, "double", { "avoidEscape": true }],
        "react/jsx-indent" : [0],
        "react/jsx-filename-extension": [0],
        "prettier/prettier": ["error"]
    }
}